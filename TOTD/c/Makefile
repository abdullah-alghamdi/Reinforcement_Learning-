BINARY_TOTD_EXECUTABLE=testBinaryTOTD
BINARY_TOTD_OBJECTS=$(BINARY_TOTD_SOURCES:.c=.o)
BINARY_TOTD_SOURCES=BinaryTOTD.c testBinaryTOTD.c
CC=clang
CFLAGS=-c -O3 -std=c99 -Wall -Wextra -Wconversion
LDFLAGS=
TOTD_EXECUTABLE=testTOTD
TOTD_OBJECTS=$(TOTD_SOURCES:.c=.o)
TOTD_SOURCES=TOTD.c testTOTD.c

all: $(BINARY_TOTD_SOURCES) $(TOTD_SOURCES) $(BINARY_TOTD_EXECUTABLE) $(TOTD_EXECUTABLE)

$(BINARY_TOTD_EXECUTABLE): $(BINARY_TOTD_OBJECTS)
	$(CC) $(BINARY_TOTD_OBJECTS) -o $@ $(LDFLAGS)

$(TOTD_EXECUTABLE): $(TOTD_OBJECTS)
	$(CC) $(TOTD_OBJECTS) -o $@ $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f $(BINARY_TOTD_EXECUTABLE) $(TOTD_EXECUTABLE) $(BINARY_TOTD_OBJECTS) $(TOTD_OBJECTS)
